https://dbdiagram.io/d

Table pilots {
  pilot_ID integer
  surname string
  forename string
  DOB date
  sex string
}

Table flights {
  flight_ID integer [primary key]
  pilot_ID integer
  status varchar
  origin_code varchar
  destination_code varchar
}

Table posts {
  id integer [primary key]
  title varchar
  body text [note: 'Content of the post']
  user_id integer
  status varchar
  created_at timestamp
}

Ref: posts.user_id > flights.flight_ID // many-to-one

Ref: flights.flight_ID < pilots.pilot_ID
